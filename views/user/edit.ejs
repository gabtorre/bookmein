<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Edit User</title>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container w-50">
        <h2 class="text-center mt-4">Edit Account</h2>

        <form action="/user/<%=foundUser._id%>?_method=PUT" method="POST" class="mt-4 white-bg">

                  <div class="form-group">
                  <label for="name">Name</label>
                  <input class="form-control" type="text" name="name" value="<%=foundUser.name %>"><br>
                  </div>
                
                  <div class="form-group">
                      <label for="phoneNumber">Phone Number</label>
                      <input class="form-control" type="text" name="phoneNumber" value="<%=foundUser.phoneNumber%>">
                  </div>

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email"  value="<%=foundUser.email %>">
                </div>
                  
                <input type="submit" value="Submit Changes" class="btn btn-secondary btn-lg btn-block red-bg" />
              </form>
        </div>
        <%- include('../partials/footer') %>
</body>
</html>