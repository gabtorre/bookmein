<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>My Account</title>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <h4 class="text-center">Account Details</h4>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <strong>Name: </strong>
                <h3><%=foundUser.name %></h3>
              </h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Email: </strong> <%= foundUser.email %>
              </li>
              <li class="list-group-item">
                <strong>Phone Number: </strong> <%= foundUser.phoneNumber %>
              </li>
            </ul>
    
            <div class="card-body text-center">
              <button type="button" class="btn bg-warning pr-3 pl-3 pb-2">
                <a href="/user/<%=foundUser._id%>/edit" class="card-link"> Edit </a>
              </button>
    
              <form
                style="display: inline-block"
                action="/user/<%=foundUser._id%>?_method=DELETE"
                method="POST"
              >
                <input
                  type="submit"
                  class="red-bg p-2"
                  style="border: none; border-radius: 5px"
                  value="DELETE"
                />
              </form>
            </div>
          </div>
        </div>
        <div class="col">
          <h4 class="text-center">My Bookings</h4>
          <div class="container">
      
            <!--  MY Bookings -->
      
            <div class="card text-center">
              <% bookings.forEach((booking) =>{ %>
      
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <h3>
                    <%= booking.day %> <br />
                    <%= booking.time %>
                  </h3>
                  <h5><%= booking.company.name %></h5>
      
                  <p>
                    <%= booking.company.address %> <br />
                    <strong>Email: </strong><%= booking.company.email %> <br />
                    <strong
                      ><i class="fas fa-phone-square-alt"></i> <%=
                      booking.company.phoneNumber %>
                    </strong>
                  </p>
                </li>
      
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>




    <!--  MY Account -->
    
  </body>
</html>
