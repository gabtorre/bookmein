<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Companies</title>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container text-center mt-5">
        <button type="button" class="btn btn-lg btn-block text-primary"><h1>Companies</h1></button>
    <div class="card-deck">
        <div class="row">
        
                <% companies.forEach((company) =>{ %> 
                <div class="card" style="width: 18rem;">
                    
                    <img src="<%= company.image %>" class="card-img-top" alt="...">
                   <h4 class="card-title"><%= company.name %></h4>
                    <div class="card-body">
                      <p class="card-text"><%= company.address %></p>
                      <a href="/company/<%= company._id%>" class="btn btn-primary">Book Now</a>
                    </div>
                  </div>
            
                  <%  }) %> 


         
            </div>
  </div>


  </div>

</body>
</html>