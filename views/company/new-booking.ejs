<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>Add Booking</title>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <div class="container w-50">
      <h2 class="text-center mt-4">Add Booking</h2>
            <form action="/company/<%= company._id %>/admin" method="POST" class="mt-4 white-bg">
                <div class="form-group">
                <label for="company">Company</label>
                <select class="form-control" name="company">
              
                <option default value="<%= company._id %>"><%= company.name %></option>
                </select>
                </div>

                <div class="form-group">
                    <label for="date-input">Date</label>
                    <input name="day" class="form-control" type="date" value="2020-09-25" >
                </div>

                <div class="form-group">
                <label for="time">Time</label>
                <select class="form-control" name="time">
                <option default>Select a time</option>
                <option>10:00am</option>
                <option>11:00am</option>
                <option>12:00pm</option>
                <option>1:00pm</option>
                <option>2:00pm</option>
                <option>3:00pm</option>
                </select>
                </div>
              <input type="submit" value="SUBMIT" class="btn btn-secondary btn-lg btn-block red-bg" />
            </form>
      </div>
      <%- include('../partials/footer') %>
  </body>
</html>
